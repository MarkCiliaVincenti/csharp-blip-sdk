<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.6;net461</TargetFrameworks>
    <Version>0.1.2-beta</Version>
    <Authors>takenet</Authors>
    <Company>take</Company>
    <Product>BLiP</Product>
    <PackageProjectUrl>https://blip.ai</PackageProjectUrl>
    <RepositoryUrl>https://github.com/takenet/blip-sdk-csharp</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/takenet/blip-sdk-csharp/blob/master/LICENSE</PackageLicenseUrl>
    <Description>BLiP C# client</Description>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Lime.Messaging" Version="0.7.173-beta" />
    <PackageReference Include="Lime.Protocol" Version="0.7.173-beta" />
    <PackageReference Include="Lime.Protocol.Serialization" Version="0.7.173-beta" />
    <PackageReference Include="Lime.Transport.Tcp" Version="0.7.173-beta" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="1.1.2" />
    <PackageReference Include="SmartFormat.NET" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
    <PackageReference Include="System.Diagnostics.TraceSource" Version="4.3.0" />
    <PackageReference Include="System.Runtime.Loader" Version="4.3.0" />
    <PackageReference Include="System.ComponentModel" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System.ComponentModel" />
  </ItemGroup>

</Project>